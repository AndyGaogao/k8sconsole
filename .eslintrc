{
  "extends": "eslint:recommended",
  "env": {
    // Enables all ES6 features except modules.
    "es6": true
  },
  "parserOptions": {
    // Enable ES6 modules to have all language features covered.
    "sourceType": "module"
  },
  "ecmaFeatures": {
    // Enable ES6 modules to have all language features covered.
    "modules": true
  }
}